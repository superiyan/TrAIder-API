# Server Configuration
NODE_ENV=production
PORT=3000
API_VERSION=v1

# Database (Production - PostgreSQL)
DATABASE_URL=postgresql://traider:traider_production_password@postgres:5432/traider_prod

# JWT (Generate strong secret in production)
JWT_SECRET=your-production-jwt-secret-key-must-be-very-long-and-random-min-32-chars-12345678
JWT_EXPIRE=7d

# CORS
CORS_ORIGIN=http://localhost:3000,http://0.0.0.0:3000

# API Configuration
API_VERSION=v1
LOG_LEVEL=warn

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Redis (Optional - for caching)
REDIS_URL=redis://redis:6379

# AI Services (Optional)
OPENAI_API_KEY=sk-your-key
AI_MODEL=gpt-4

# Market Data API (Optional)
MARKET_DATA_API_KEY=your-market-api-key

# PostgreSQL specific
POSTGRES_USER=traider
POSTGRES_PASSWORD=traider_production_password
POSTGRES_DB=traider_prod
